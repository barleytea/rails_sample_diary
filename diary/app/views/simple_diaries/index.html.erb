<p id="notice"><%= notice %></p>

<h1>日記一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>登録日時</th>
      <th>更新日時</th>
      </tr>
  </thead>

  <tbody>
    <% @simple_diaries.each do |simple_diary| %>
      <tr>
        <td><%= simple_diary.id %></td>
        <td><%= link_to simple_diary.title, simple_diary %></td>
        <td><%= link_to simple_diary.created_at %></td>
        <td><%= link_to simple_diary.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

