<p id="notice"><%= notice %></p>

<h1>Simple Diaries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @simple_diaries.each do |simple_diary| %>
      <tr>
        <td><%= simple_diary.title %></td>
        <td><%= simple_diary.body %></td>
        <td><%= link_to 'Show', simple_diary %></td>
        <td><%= link_to 'Edit', edit_simple_diary_path(simple_diary) %></td>
        <td><%= link_to 'Destroy', simple_diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

